<% if logged_in? %>

<h3>タイトル</h3>
 <%= @topic.title %>

<h3>トピック内容</h3>
 <%= @topic.content %>

  <h3>コメント一覧</h3>

  <%= @comments.inspect %>
  
  <%= form_for(@comment) do |f| %>
   <%= f.hidden_field :topic_id %>
   <%= f.text_field :content %>

   <%= f.submit "コメント投稿" %>
  <% end %>
  
  
  

<% else %>
 
<p>内容を見るにはログインしてください</p>

<% end %>